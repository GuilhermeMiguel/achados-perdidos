create database achadosperdidos;
use achadosperdidos;

/*drop database achadosperdidos;*/

create table entregador(
	id int auto_increment primary key,
	documento varchar(14),
	nome varchar(30),
	sobrenome varchar(50),
	telefone01 varchar(14),
	telefone02 varchar(14),
	turma varchar(15),
    turno varchar(15)
    );
    
    create table categoria(
	id int auto_increment primary key,
	descricao varchar(50)
    );
    
create table Objeto(
	id int auto_increment primary key,
    idEntregador int,
    idCategoria int,
	cor varchar(30),
	tamanho varchar(30),
	infoComplementares varchar(100),
	statusObjeto varchar(20),
	localEncontro varchar(100),
	turnoEncontro varchar(5),
    constraint idEntregador FOREIGN KEY (idEntregador) REFERENCES entregador (id),
    constraint idCategoria FOREIGN KEY (idCategoria) REFERENCES Categoria (id)
    );

create table funcionario(
	id int auto_increment primary key,
	nome varchar(30),
	sobrenome varchar(50),
	usuario varchar(20),
	senha varchar(10),
    email varchar(50),
    cargo varchar(45)
    );
	
create table devolucaoObjeto(
	id int auto_increment primary key,
	idObjeto int,
	documentoDono varchar(14),
	nomeDono varchar(30),
	sobrenomeDono varchar(50),
	telefoneDono01 varchar(14),
	telefoneDono02 varchar(14),
	turmaDono varchar(15),
	dataDevolucao date,
    constraint idObjeto FOREIGN KEY (idObjeto) REFERENCES objeto (id)
    );
    
    select * from entregador;
    select * from objeto;
    select * from categoria;
    select * from funcionario;
	select * from devolucaoObjeto;
     
    
    drop table entregador;
    drop table objeto;
    drop table categoria;
    drop table funcionario;
	drop table devolucaoObjeto;